<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addFragments.AddPerson">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelName"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                />

            <EditText
                android:id="@+id/editTextIme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/labelName"
                android:minHeight="48dp"
                android:padding="12dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelSurname"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:minHeight="48dp"
                android:padding="12dp"/>

            <EditText
                android:id="@+id/editTextPrezime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/labelSurname"
                android:minHeight="48dp"
                android:padding="12dp"/>

            <!-- Submit Button -->


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/buttonSubmitOsoba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buttonSubmit"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        style="@style/ButtonPrimaryStyle"/>


</FrameLayout>